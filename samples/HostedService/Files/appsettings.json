{
  "Logging": {
    "NLog": {
      "targets": {
        "console": {
          "targetType": "Console",
          "layout": "${level} [${category}] ${message}",
          "UseColors": "true"
        },
        "file" : {
          "targetType": "File",
          "fileName": "${binPath}logs/app.log"
        },
        "udp" : {
          "targetType": "UDP",
          "host": "localhost",
          "port": 2020
        }
      },
      "rules": [
        {
          "name": "*",
          "writeTo": "console",
          "minLevel": "Trace",
          "isFinal": false
        },
        {
          "name": "*",
          "writeTo": "udp,file",
          "minLevel": "Information",
          "isFinal": false
        }
      ]
    }
  }
}